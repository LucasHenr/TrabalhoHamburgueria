<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ul.activities.MainActivity"
    android:background="@color/backgroudn">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/main_welcomemessage"
        android:textColor="@color/button"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/imagepage"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/hamburguer" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagepage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/summitbold_inline"
        android:text="@string/hamburgueria_lj"
        android:textColor="@color/button"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/titlecardapio"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CardÃ¡pio"
        android:textSize="20sp"
        android:fontFamily="@font/opensans_bold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:textAllCaps="true"
        android:textColor="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlecardapio"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp" />
</RelativeLayout>